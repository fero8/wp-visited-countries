<?xml version="1.0" encoding="UTF-8"?>

<settings>
  <font>Tahoma</font>
  <redraw>true</redraw>
  <add_time_stamp>true</add_time_stamp>
  <color_change_time_start>0</color_change_time_start>
  <color_change_time_hover>0.1</color_change_time_hover>
    
  <background>
    <color>#444444</color>
  </background>
  
  <zoom>
    <enabled>true</enabled>
    <arrows_enabled>false</arrows_enabled>
    <color>#FFCC00</color>
    <color_hover>#FF6600</color_hover>
    <alpha>70</alpha>
    <outline_color>#FFFFFF</outline_color>
    <x>5</x>
    <y>30</y>
    <height>30%</height>
    <max>1500%</max>
  </zoom>
  
  <small_map>
    <enabled>true</enabled>
    <x>0%</x>
    <color>#AFEA48</color>
    <border_width>2</border_width>
    <border_color>#FFFFFF</border_color>
    <rectangle_color>#FFFFFF</rectangle_color>
    <collapse_button_color>#000000</collapse_button_color>
    <collapse_button_position>BL</collapse_button_position>
  </small_map>  
  
  <area>                                                        
    <balloon_text>
      <![CDATA[<font size="12pt"><b>{title}</b></font>{description}]]>
    </balloon_text>
    <active_only_if_value_set>true</active_only_if_value_set>
    <color_solid>#CC0000</color_solid>
    <color_light>#00B82E</color_light>
    <color_hover>#FF0A0A</color_hover>
    <color_unlisted>#B8B8B8</color_unlisted>
  </area>
  
  <legend>
    <enabled>false</enabled>
  </legend>
  
  <text_box>
    <enabled>false</enabled>
  </text_box>
  
  <balloon>
    <color>#FFFFFF</color>
    <text_color>#000000</text_color>
  </balloon>
</settings>
